@{
    ViewBag.Title = "gallery";
    Layout = "~/Views/Shared/general.cshtml";
}
<style>
    .head {
        min-height:50px;
        background:url('../Content/images/b6.jpg');
        background-attachment:fixed;
    }
    .head1 {
        min-height:50px;
        background:rgba(0,0,0,.65);
        color:white;
        text-align:center;
        font-size:25px;
        padding-top:0.5%;
    }
    .gallery 
    {
        background:gray;
    }
    .gal {
        min-height:250px;
        margin-top:10%;
        background:white;
        padding:8%;
    }
        .gal img {
            height:200px;
            width:100%;
        }
        .gal:hover {
            transform:scale(1.05);
            transition:all ease 1s;
            filter:grayscale(100%);
        }
    .img 
    {
        padding:2%;
    }
    .box {
        height:100%;
        width:100%;
        background:rgba(0,0,0,.5);
        position:fixed;
        top:0px;
        display:none;
        z-index:1;

    }
    .box1 {
        background:gray;
        min-height:400px;
        margin:0px auto;
        padding:1%;
    }
        .box1 img {
            width:100%;
            height:70%;
            border:1px dashed black;
        }
    a:hover { text-decoration-line:none;
    }
</style>
<script src="~/Content/js/jquery.js"></script>
<script>
    $(document).ready(function () {
        $(".gal img").click(function () {
            $(".box").slideDown("fast");
            var path = $(this).attr("src");
            $(".box1 img").attr("src", path);
        })
        $(".box1 a").click(function (){
            $(".box").css("display","none");
        })
    })
</script>

<div class="col-sm-12 head">
<div class="row">
    <div class="col-sm-12 head1">IMAGE <b style="color:red;">GALLERY <span class="fa fa-image"></span></b></div>   
</div>
</div>
<div class="col-sm-12 gallery">
        <div class="col-sm-1"></div>
        <div class="col-sm-10 img">
            <div class="col-sm-12">
                @Html.Raw(ViewBag.image)
        </div>
                <div class="col-sm-1"></div>
    </div>
</div>
@* Modal Start *@
<div class="col-sm-12 box">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 box1">
        <a class="pull-right fa fa-times-circle-o"style="color:white;font-size:23px; cursor:pointer;"></a>
        <br /><br />
        <img src="~/Content/images/b6.jpg" />
    </div>
       <div class="col-sm-3"></div>
</div>

